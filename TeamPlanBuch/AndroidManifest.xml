<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.iconiaone.teamplanbuch"
    android:versionCode="1"
    android:versionName="1.0" >
 	
 	<uses-permission android:name="android.permission.INTERNET" />
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.iconiaone.teamplanbuch.LoginScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.iconiaone.teamplanbuch.RegisterScreen"
            android:label="@string/title_activity_register_screen" >
        </activity>
        <activity
            android:name="de.iconiaone.teamplanbuch.HomeScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name="de.iconiaone.teamplanbuch.CreateEventScreen"
            android:label="@string/title_activity_create_event_screen" >
        </activity>
        <activity
            android:name="de.iconiaone.teamplanbuch.MailScreen"
            android:label="@string/title_activity_mail_screen" >
        </activity>
        <activity
            android:name="de.iconiaone.teamplanbuch.SettingsScreen"
            android:label="@string/title_activity_settings_screen" >
        </activity>
        <activity
            android:name="de.iconiaone.teamplanbuch.ProfilScreen"
            android:label="@string/title_activity_profil_screen" >
        </activity>
    </application>

</manifest>
